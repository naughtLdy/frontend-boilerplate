{
  "name": "frontend-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist",
    "precommit": "lint-staged",
    "start": "webpack-serve --config ./config/serve.config.js",
    "build": "webpack --config ./config/webpack.config.js",
    "test": "jest",
    "watch:build": "webpack -w --config ./config/webpack.config.js",
    "watch:test": "jest --watch",
    "lint": "tslint -c ./config/tslint.json 'src/ts/**/*.tsx?'"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./config/tsconfig.test.json"
      }
    },
    "testMatch": [
      "<rootDir>/src/ts/**/?(*.)test.ts?(x)"
    ]
  },
  "dependencies": {
    "@types/react": "^16.3.14",
    "@types/react-dom": "^16.0.5",
    "autoprefixer": "^8.5.2",
    "awesome-typescript-loader": "^5.0.0",
    "css-loader": "^0.28.11",
    "cssnano": "^3.10.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "lint-staged": "^7.2.0",
    "postcss-loader": "^2.1.5",
    "prettier": "^1.13.5",
    "pug": "^2.0.3",
    "pug-loader": "^2.4.0",
    "raw-loader": "^0.5.1",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "source-map-loader": "^0.2.3",
    "style-loader": "^0.21.0",
    "styled-components": "^3.3.2",
    "typescript": "^2.8.3",
    "webpack": "^4.10.2",
    "webpack-cli": "^2.1.4",
    "webpack-hot-client": "^3.0.0",
    "webpack-merge": "^4.1.2"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "tslint-loader": "^3.6.0",
    "tslint-react": "^3.6.0",
    "webpack-serve": "^1.0.2"
  }
}
