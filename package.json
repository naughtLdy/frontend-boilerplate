{
  "name": "frontend-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "postinstall": "bash ./fix-types.sh",
    "clean": "rm -rf dist",
    "precommit": "lint-staged",
    "upgrade": "ncu -u -a",
    "start": "webpack-serve --config ./config/serve.config.js",
    "dev": "webpack-dev-server --config ./config/serve.config.js",
    "build": "webpack --config ./config/webpack.config.js",
    "test": "jest",
    "watch:build": "webpack -w --config ./config/webpack.config.js",
    "watch:test": "jest --watch",
    "lint": "tslint -c ./config/tslint.json 'src/ts/**/*.tsx?'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commitmsg": "commitlint -e $GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@types/react": "16.9.11",
    "@types/react-dom": "16.9.4",
    "@types/react-native": "0.60.22",
    "@types/react-redux": "7.1.5",
    "@types/styled-components": "4.4.0",
    "autoprefixer": "9.7.2",
    "css-loader": "3.2.0",
    "cssnano": "4.1.10",
    "extract-text-webpack-plugin": "4.0.0-beta.0",
    "html-webpack-plugin": "3.2.0",
    "postcss-loader": "3.0.0",
    "prettier": "1.19.1",
    "pug": "2.0.4",
    "pug-loader": "2.4.0",
    "raw-loader": "3.1.0",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-redux": "7.1.3",
    "redux": "4.0.4",
    "source-map-loader": "0.2.4",
    "style-loader": "1.0.0",
    "styled-components": "4.4.1",
    "ts-loader": "6.2.1",
    "typescript": "3.7.2",
    "webpack": "4.41.2",
    "webpack-cli": "3.3.10",
    "webpack-hot-client": "4.1.2",
    "webpack-merge": "4.2.2"
  },
  "devDependencies": {
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "@types/enzyme": "3.10.4",
    "@types/enzyme-adapter-react-16": "1.0.5",
    "@types/jest": "24.0.23",
    "@types/node": "12.12.18",
    "enzyme": "3.10.0",
    "enzyme-adapter-react-16": "1.15.1",
    "husky": "3.1.0",
    "jest": "24.9.0",
    "jest-enzyme": "7.1.2",
    "lint-staged": "9.5.0",
    "ts-jest": "24.2.0",
    "tslint": "5.20.1",
    "tslint-loader": "3.5.4",
    "tslint-react": "4.1.0",
    "webpack-dev-server": "3.9.0"
  }
}
