{
  "name": "frontend-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "postinstall": "bash ./fix-types.sh",
    "clean": "rm -rf dist",
    "precommit": "lint-staged",
    "upgrade": "ncu -u -a",
    "start": "webpack-serve --config ./config/serve.config.js",
    "dev": "webpack-dev-server --config ./config/serve.config.js",
    "build": "webpack --config ./config/webpack.config.js",
    "test": "jest",
    "watch:build": "webpack -w --config ./config/webpack.config.js",
    "watch:test": "jest --watch",
    "lint": "tslint -c ./config/tslint.json 'src/ts/**/*.tsx?'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commitmsg": "commitlint -e $GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@types/react": "^16.8.6",
    "@types/react-dom": "^16.8.2",
    "@types/react-native": "^0.60.0",
    "@types/react-redux": "^7.0.1",
    "@types/styled-components": "^4.1.11",
    "autoprefixer": "^9.4.9",
    "awesome-typescript-loader": "^5.0.0",
    "css-loader": "^3.0.0",
    "cssnano": "^4.1.10",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "html-webpack-plugin": "^3.2.0",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.13.5",
    "pug": "^2.0.3",
    "pug-loader": "^2.4.0",
    "raw-loader": "^1.0.0",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-redux": "^6.0.1",
    "redux": "^4.0.1",
    "source-map-loader": "^0.2.3",
    "style-loader": "^0.23.1",
    "styled-components": "^4.1.3",
    "ts-loader": "^5.3.3",
    "typescript": "^3.3.3333",
    "webpack": "^4.10.2",
    "webpack-cli": "^3.2.3",
    "webpack-hot-client": "^4.1.1",
    "webpack-merge": "^4.1.2"
  },
  "devDependencies": {
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "@types/enzyme": "3.9.0",
    "@types/enzyme-adapter-react-16": "1.0.5",
    "@types/jest": "24.0.11",
    "@types/node": "11.15.2",
    "enzyme": "3.9.0",
    "enzyme-adapter-react-16": "1.10.0",
    "husky": "3.0.9",
    "jest": "24.1.0",
    "jest-enzyme": "7.0.2",
    "lint-staged": "9.4.3",
    "ts-jest": "24.0.0",
    "tslint": "5.13.1",
    "tslint-loader": "3.5.4",
    "tslint-react": "3.6.0",
    "webpack-dev-server": "3.2.1"
  }
}
